{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "调试图片处理脚本",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/image.js",
      "args": ["./src/content"],
      "console": "integratedTerminal",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect-brk"]
    }
  ]
}
